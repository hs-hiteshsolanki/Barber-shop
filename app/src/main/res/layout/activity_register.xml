<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    tools:context=".register">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="Enter a Name"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/phnumbe"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="70dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="Enter Mobile Number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/shopn"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phnumbe"
        android:layout_alignStart="@+id/phnumbe"
        android:layout_alignEnd="@+id/phnumbe"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="70dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="Enter Shop Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopn"
        android:layout_alignStart="@+id/shopn"
        android:layout_alignEnd="@+id/shopn"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="70dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="Password"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/cpass"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_alignEnd="@+id/pass"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="70dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="Confirm Password"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/email"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpass"
        android:layout_alignStart="@+id/cpass"
        android:layout_alignEnd="@+id/cpass"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="70dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/address"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="70dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="Crrent Address"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/address"
        android:layout_marginStart="-19dp"
        android:layout_marginTop="23dp"
        android:backgroundTint="@color/black"
        android:isScrollContainer="false"
        android:text="Close"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/address"
        android:layout_marginStart="158dp"
        android:layout_marginTop="21dp"
        android:backgroundTint="@color/black"
        android:isScrollContainer="false"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="13dp" />

</RelativeLayout>